<%
    var big_title = "指紋機設備設定";
    var title_bar = "指紋機資料維護";
    var submit_but = "確認";
%>
	<div id="wrapper">
        <%- partial("../layout/left") %> 
		<div id="page-wrapper">
			<div class="row">
				<div class="col-lg-12">
					<h1 class="page-header"><%=big_title%></h1>
				</div>
				<!-- /.col-lg-12 -->
			</div>
			<!-- /.row -->

			<!-- /.row -->
			<div class="row">
				<div class="col-lg-12">
					<div class="panel panel-default">
						<div class="panel-heading">
							<%=title_bar%>
						</div>
						<div class="panel-body">
							<div class="row">
								<div class="col-lg-6">
									<form role="form" id="form_validation" action="<%=link_to_submit%>">       

<%-: {is_require:true, is_autocomplete:false, input_ch:"AP設備唯一碼", id_name:"ds_ap_id", input_data:ap_option, input_extra:null}|create_select %>
<%-: {is_require:true, is_readonly:false,    input_ch:"產品識別碼",  id_name:"ds_device_id"}|create_input %>
<%-: {is_require:true, is_readonly:false,    input_ch:"產品名稱",    id_name:"ds_product"}|create_input %>
<%-: {is_require:true, is_readonly:false,    input_ch:"廠商識別碼",  id_name:"ds_co_id"}|create_input %>
<%-: {is_require:true, is_readonly:false,    input_ch:"製造商",      id_name:"ds_company"}|create_input %>
<%-: {is_require:true, is_readonly:false,    input_ch:"位置識別碼",  id_name:"ds_addr"}|create_input %>
<%-: {is_require:true, is_readonly:false,    input_ch:"速度",        id_name:"ds_speed"}|create_input %>
<%-: {is_require:true, is_readonly:false,    input_ch:"版本",        id_name:"ds_ver"}|create_input %>
<%-: {id_name:"submit_to_link", id_value: link_to_list } |create_hidden %>

										<a href="<%=link_to_list%>" class="btn btn-default">取消</a>
										<button type="submit" class="btn btn-primary"><%=submit_but%></button>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			
		</div>
		<!-- /#page-wrapper -->

	</div>
	<!-- /#wrapper -->
    
<script>

$().ready(function(){    
    //補上驗證
    var input_validation = {
        // 驗證規則
        rules: {
			ds_ap_id: {required: true},
			ds_device_id: {required: true},
			ds_product: {required: true},
			ds_co_id: {required: true},
			ds_co: {required: true},
			ds_addr: {required: true},
			ds_speed: {required: true},
			ds_ver: {required: true},
		}
    }
    check_vailidation( input_validation );
    
});	
</script>
    