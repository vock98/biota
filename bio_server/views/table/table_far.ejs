<%
    var big_title = "使用紀錄報表";
    var bar_title = "FAR 分析報表";
%>
	<div id="wrapper">
        <%- partial("../layout/left") %> 
		<div id="page-wrapper">
			<div class="row">
				<div class="col-lg-12">
					<h1 class="page-header"><%=big_title%></h1>
				</div>
				<!-- /.col-lg-12 -->
			</div>
			<!-- /.row -->
			<div class="row">
				<div class="col-lg-12">
					<div class="panel panel-default">
						<div class="panel-heading">
							<%=bar_title%>
						</div>
						<!-- /.panel-heading -->
						<div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <form role="form" id="form_validation" action="<%=form_action%>">       
                                            <%-: {is_require:false, is_autocomplete:true, input_ch:"選擇區域", id_name:"select_area", input_data: sitename_option , input_extra:null}|create_select %>
                                            <button type="submit" id="send_submit" class="btn btn-primary" style="display:none">切換區域</button>
                                        </form>
                                    </div>
                                </div>
                                <!-- /.col-lg-12 -->
                            </div>
							<div id="morris-area-chart"></div>
							<div id="morris-area-chart2"></div>
						</div>
						<!-- /.panel-body -->
					</div>
					<!-- /.panel -->
				</div>				
			</div>
			<!-- /.row -->
		</div>
		<!-- /#page-wrapper -->
	</div>
	<!-- /#wrapper -->
	<script>
	$(function() {
		continue_diagram(<%-JSON.stringify(fake_obj)%>);
        check_default('select'       ,'select_area'     ,'<%-: select_area %>');
        $("#select_area").on("change", function(){
            if($("#select_area :selected").text()!='<%-: select_area %>'){
                $("#send_submit").click();
            }
        });
	});
	</script>    