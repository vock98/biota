<%
    var big_title = "開發者應用程式模擬介面";
    var bar_title = "APNS / GCM 推播模擬";
%>
<div id="wrapper">
    <%- partial("../layout/left") %> 
	<div id="page-wrapper">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header"><%=big_title%></h1>
			</div>
			<!-- /.col-lg-12 -->
		</div>
		<!-- /.row -->

		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">

					<div class="panel-heading">
						<%=bar_title%>
					</div>
					<div class="panel-body">

						<div class="row">

							<div class="col-lg-12">

								<div class="form-group">
									<label>推播對象</label>
									<select class="form-control" id="api_type">
										<option>請選擇</option>
										<option>推播對象1</option>
										<option>推播對象2</option>
										<option>推播對象3</option>
										<option>推播對象4</option>
									</select>
								</div>

								<div class="form-group">
									<label>參考參數</label>
									<textarea name="" id="" cols="30" rows="10" class="form-control"></textarea>
								</div>

								<div class="form-group">
									<label>推播標題</label>
									<textarea name="" id="" cols="30" rows="1" class="form-control"></textarea>
								</div>

								<div class="form-group">
									<label>推播內文</label>
									<textarea name="" id="" cols="30" rows="6" class="form-control"></textarea>
								</div>

								<button type="submit" class="btn btn-success btn-block">發送</button>
							</div>
						</div>
					</div>
					<!-- /.panel-body -->
				</div>
			</div>
		</div>
		
	</div>
	<!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
    